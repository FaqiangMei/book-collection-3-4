<p style="color: green"><%= notice %></p>

<h1>User Books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= user_book.user.username %></td>
        <td><%= user_book.book.title %></td>
        <td><%= link_to "Show", user_book %></td>
        <td><%= link_to "Edit", edit_user_book_path(user_book) %></td>
        <td><%= link_to "Destroy", user_book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New User Book", new_user_book_path %> |
<%= link_to "Users Index", users_path %> |
<%= link_to "Books Index", books_path %>
